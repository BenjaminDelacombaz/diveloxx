<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="incident_mail_wizard_form" model="ir.ui.view">
            <field name="name">incident.mail.wizard.form</field>
            <field name="model">incident.mail.wizard</field>
            <field name="groups_id" eval="[(4,ref('base.group_user'))]"/>
            <field name="arch" type="xml">
                <form string="Compose Email">
                    <field name="message"/>
                    <footer>
                        <button string="Send" name="action_send_mail" type="object" class="btn-primary o_mail_send"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_incident_mail_wizard" model="ir.actions.act_window">
            <field name="name">Incident Mail Wizard</field>
            <field name="res_model">incident.mail.wizard</field>
            <field name="binding_model_id" ref="altis_incident.model_incident_mail_wizard"/>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
